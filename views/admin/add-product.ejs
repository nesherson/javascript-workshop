<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <form class="product-form" action="/admin/add-product" method="POST">
        <div class="form-control">
            <label for="Title">Title</label>
            <input type="text" name="title" id="title">
        </div>
        <div class="form-control">
            <label for="imageUrl">Image</label>
            <input type="text" name="imageUrl" id="imageUrl" value="https://www.publicdomainpictures.net/pictures/10000/velka/1-1210009435EGmE.jpg">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" step="0.01" id="price">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="5" id="name">Description..</textarea>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button class="btn" type="submit">Add Product</button>
    </form>
    
<%- include('../includes/end.ejs') %>